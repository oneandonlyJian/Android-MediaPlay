<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">


    <com.diggoods.api.only_one.SnowView
        android:id="@+id/play_snow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.diggoods.api.only_one.RainView
        android:id="@+id/play_rain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginTop="47dp"
            android:layout_marginRight="22dp"
            android:src="@mipmap/icon" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/play_icons"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/play_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#807777"
            android:textSize="14sp" />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_marginTop="100dp"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/play_start"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:src="@mipmap/play"
              android:layout_centerHorizontal="true"
              />
          <ImageView
              android:id="@+id/play_pause"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:src="@mipmap/pause"
              android:layout_centerHorizontal="true"/>
      </RelativeLayout>
    </LinearLayout>

</RelativeLayout>